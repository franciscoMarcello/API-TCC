generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id           String     @id @default(uuid())
  name         String
  email        String     @unique
  phone        String     @unique
  passwordHash String
  picture      String?
  Chamado      Chamado[]
  Endereco     Endereco[]
  created_at   DateTime?  @default(now())
  updated_at   DateTime?  @default(now())


  @@map("customers")
}

model Endereco {
  id          String    @id @default(uuid())
  street      String
  number      String
  city        String
  complement  String?
  customer    Customer?  @relation(fields: [customerId], references: [id])
  tecnic      Tecnic? @relation(fields: [tecnicId], references: [id])
  cep         String
  created_at  DateTime? @default(now())
  updated_at  DateTime? @default(now())


  customerId String?
  tecnicId String?


  @@map("endereco")
}

model Chamado {

  id          String    @id @default(uuid())
  title       String
  description String

  status      String
  customer    Customer  @relation(fields: [customerId], references: [id])
  tecnic      Tecnic?   @relation(fields: [tecnicId], references: [id])
  category    String
  created_at  DateTime? @default(now())
  updated_at  DateTime? @default(now())


  tecnicId     String?
  customerId String
  @@map("chamados")

}

model Tecnic {
  id           String    @id @default(uuid())
  name         String
  email        String    @unique
  phone        String    @unique
  passwordHash String
  picture      String?
  rating       Float?
  created_at   DateTime? @default(now())
  updated_at   DateTime? @default(now())

  chamado   Chamado[]
  endereco Endereco[]
  @@map("tecnic")
 
}
