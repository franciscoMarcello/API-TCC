generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id           String @id @default(uuid())
  name         String
  email        String @unique
  phone        String @unique
  passwordHash String

  Chamado  Chamado[]
  Endereco Endereco[]
  @@map("customers")
}

model Endereco {
  id          String   @id @default(uuid())
  street      String
  number      Int
  city        String
  complement  String
  customer_id Customer @relation(fields: [customerId], references: [id])

  customerId String
  @@map("endereco")
}

model Chamado {

  id          String   @id @default(uuid())
  title       String
  description String
  images      String[]
  status      String
  customer    Customer @relation(fields: [customerId], references: [id])

  created_at DateTime? @default(now())
  Updated_at DateTime? @default(now())


  customerId String
  @@map("chamados")
}
